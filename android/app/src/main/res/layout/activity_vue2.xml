<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vue2Activity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="371dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
        <VideoView
                android:layout_width="500dp"
                android:layout_height="match_parent" android:id="@+id/videoView" android:layout_weight="1"
                android:layout_margin="20dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="@string/toView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/toView1" android:layout_weight="1"/>
                <Button
                        android:text="@string/toView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/toView3" android:layout_weight="1"/>
            </LinearLayout>
            <fragment
                    android:id="@+id/mapView2"
                    android:layout_width="match_parent"
                    android:layout_height="481dp"
                    class="com.google.android.gms.maps.SupportMapFragment" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>