<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vue3Activity">
    
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <fragment
                android:id="@+id/mapView3"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                class="com.google.android.gms.maps.SupportMapFragment" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">
            <Button
                    android:text="@string/toView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="255dp"
                    tools:layout_editor_absoluteX="50dp" android:id="@+id/toView1" android:layout_weight="1"/>
            <Button
                    android:text="@string/toView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/toView2" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textSpeed" android:layout_weight="1"
                        android:text="Vitesse"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textCoordsBoat" android:layout_weight="1"
                        android:text="Coords Boat"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_width="20dp">
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttonTrace" android:layout_weight="1"
                        android:text="@string/drawLines"/>
                <Button
                        android:text="@string/clear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttonClear" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/textCoordsPoint" android:layout_weight="1"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>